<% form_for current_user do |f| %>
  <table cellspacing='0' cellpadding='2' class='action-box' width='100%'>
    <thead><tr><td colspan='2'><h2>Editing Your Profile</h2></td></tr></thead>
    <tbody>
      <tr>
        <td valign='top' colspan='2'><h3>New Password</h3></td>
      </tr>
      
      <tr>
        <td valign='top'><%= f.label "password", "New Password"  %></td>
        <td><%= f.password_field "password", :value => "" %></td>
      </tr>
      
      <tr>
        <td valign='top'><%= f.label "password_confirmation", "New Password Confirmation" %></td>
        <td><%= f.password_field "password_confirmation", :value => "" %></td>
      </tr>
      
      <tr>
        <td valign='top'><%= f.label "signature" %></td>
        <td><%= f.text_area "signature", :cols => 80, :rows => 5 %></td>
      </tr>
      
      <tr>
        <td valign='top'><%= f.label "email" %></td>
        <td><%= f.text_field "email"  %></td>
      </tr>
      
      <tr>
        <td valign='top'><%= f.label "time_zone" %></td>
        <td><%= f.time_zone_select "time_zone" %></td>
      </tr>
      
      <tr>
        <td valign='top'><%= f.label "date_display", "Date &amp; Time Display" %></b></td>
        <td>
          <%= f.text_field "date_display", :size => 10 %> 
          <%= f.text_field "time_display", :size => 10 %>
          <%= link_to "read this for more information", "http://noobkit.com/show/ruby/ruby/ruby-core/time/strftime.html" %>
        </td>
      </tr>
      
      <tr>
        <td valign='top'><b>Example Time Display</b></td>
        <td><%= Time.now.strftime(date_display + " " + time_display) %></td>
      </tr>
      
      <% if @themes.size > 1 %>
        <tr>
          <td valign='top'><b>Theme</b></td>
          <td><%= f.select "theme", @themes.map { |t| [t.name, t.id] } %></td>
        </tr>
      <% end %>
      
      <tr>
        <td valign='top'><b>Items Per Page</b></td>
        <td><%= f.text_field "per_page", :size => 3 %></td>
      </tr>
      
      <% if current_user.email %>
        <tr><td valign='top'>
          <b>Current <a href='http://gravatar.com/'>Gravatar</a></b></td>
          <td>
            <%= image_tag "http://www.gravatar.com/avatar.php?gravatar_id=" + Digest::MD5.hexdigest(current_user.email) %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan='2'><%= submit_tag "Update" %></td>
      </tr>
    </tfoot>
  </table>
<% end %>