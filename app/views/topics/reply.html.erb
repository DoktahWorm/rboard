<%= error_messages_for 'post' %>
<% form_for @post, :url => topic_posts_path(@topic) do %>
  <%= hidden_field("post","user_id", :value => current_user.id) %>
  <%= hidden_field_tag("quote", params[:quote]) %>
  <table cellspacing='0' cellpadding='2' class='action-box' width='100%'>
    <thead><tr><td colspan='2'><h2>Replying to topic: <%= @topic.subject %></h2></td></tr></thead>
    <tbody>
      <tr><td valign='top'>
        <b>Post:</b></td>
        <td>
          <% unless params[:quote].blank? %>
            <%= text_area("post","text", :cols => "80", :value => "[quote=\"" + @quoting_post.user.login + "\"]" + @quoting_post.text + "[/quote]") %>
          <% else %>
            <%= text_area("post","text", :cols => "80") %>
          <% end %>
    </td></tr></tbody>
    <tfoot><tr><td colspan='2'>
          <%= submit_tag("Create") %>
      </td></tr>
    </tfoot>
  </table>
<% end %>
<table cellspacing='0' cellpadding='5' width='100%' class='posts'>
  <%= render :partial => "posts/post", :collection => @posts %>
</table>