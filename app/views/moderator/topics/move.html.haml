- form_for [:moderation, :move, :topics] do |f|
  %table.action-box{ :cellspacing => "0", :cellpadding => "2", :width => "100%" }
    %thead
      %tr
        %td{ :colspan => "2" }
          %h2
            = t(:Moving_topics)
    %tbody
      %tr
        %td{ :valign => "top" }
          %b
            = t(:Forum)
            \:
        %td
          = select_tag "forum_id", options_from_collection_for_select(@forums, "id", "name")
    %tfoot
      %tr
        %td{ :colspan => "2" }
          = submit_tag(t(:Create))
          or
          = link_to t(:Cancel), session[:return_to]