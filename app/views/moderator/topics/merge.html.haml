= link_to t(:Topics), moderator_topics_path
\->
= t(:Merging)
- form_tag merge_moderator_topics_path, :method => :put do
  %table.action-box{ :cellspacing => "0", :cellpadding => "2", :width => "100%" }
    %thead
      %tr
        %td{ :colspan => "2" }
          %h2= t(:Merging)
      %tbody
        %tr
          %td
            %b Master Topic
            %br
            - for topic in @topics
                = radio_button_tag "master_topic_id", topic.id, false, :onclick => "$('new_subject').value = '#{topic.subject}'"
                = topic.subject
                %br
            = label_tag "new_subject", t(:New_subject)
            = text_field_tag "new_subject"
            %br
            = submit_tag "Merge"
