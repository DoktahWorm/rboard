<h2><%= t(:Sent_Messages) %></h2>
<%= link_to "Send New Message", new_message_path %> | <%= link_to t(:Inbox), messages_path %>
<table cellspacing='0' cellpadding='5' width='100%' class='forums'>
	<thead>
		<tr>
			<td align='center' width='20'><%= t(:Read) %></td>
			<td align='center' width='40'><%= t(:Delete) %></td>
			<td align='center'><%= t(:To) %></td>
			<td align='center'><%= t(:Time_sent) %></td>
			</tr>
	</thead>
	<tbody>
		<% unless @messages.empty? %>
		<%= render :partial => "message", :collection => @messages %>
		<% else %>
		<tr><td colspan='4' align='center'><b><%= t(:no_sent_messages) %></b></td></tr>
		<% end %>
	</tbody>
</table>