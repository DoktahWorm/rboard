<%= link_to t(:admin_section), admin_path %> -> <%= link_to t(:ranks), admin_ranks_path %> -> <%= t(:editing_a_rank) %>: <%= @rank.name %>
<% form_for [:admin, @rank] do |f| %>
<table cellspacing='0' cellpadding='5' width='100%' class='action-box'>
  <thead>
    <tr>
      <td><h2><%= t(:editing_a_rank) %></h2></td>
    </tr>
  </thead>
  <%= render :partial => "form", :locals => { :f => f } %>
  <tfoot>
    <tr>
      <td colspan='2'><%= submit_tag t(:submit_update) %></td>
    </tr>
  </tfoot>
</table>
<% end %>