\:
= @rank.name
- form_for [:admin, @rank] do |f|
  %table.action-box{ :cellspacing => "0", :cellpadding => "5", :width => "100%" }
    %thead
      %tr
        %td{ :colspan => "2" }
          %h2
            = t(:Editing_a_rank)
    = render :partial => "form", :locals => { :f => f }
    %tfoot
      %tr
        %td{ :colspan => "2" }
          = submit_tag t(:Update)
