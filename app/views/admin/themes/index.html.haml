= link_to t(:admin_section)
\->
= t(:Themes)
%h2
  = t(:Themes)
%table.list-table{ :cellspacing => "0", :rules => "groups", :cellpadding => "2", :width => "100%" }
  %thead
    %tr
      %td
        = t(:Name)
      %td
        = t(:Is_default)
  %tbody
    - unless @themes.empty?
      - for theme in @themes
        %tr
          %td
            = theme.name
          %td
            - if theme.is_default?
              = t(:yes)
            - else
              = link_to t(:make_default), make_default_admin_theme_path(theme), :method => "put"
    - else
      %tr
        %td{ :colspan => "4" }
          = t(:no_themes)
